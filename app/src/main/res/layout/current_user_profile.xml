<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_login_gradients"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:cursorVisible="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="#fff"
                    android:id="@+id/btnGender"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/ic_person_black_48dp"
                    android:id="@+id/imgProfile" />
                <EditText
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textColorHint="#FFF"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:id="@+id/txtNameProfile"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:weightSum="3">
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText

                            android:id="@+id/txtDayProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:digits="0123456789"
                            android:hint="dd"
                            android:gravity="center_horizontal"
                            android:inputType="numberDecimal"
                            android:textColor="@color/startBlue"
                            android:textColorHint="#eaa0a0"
                            android:textSize="17dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/txtMonthProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:digits="0123456789"
                            android:hint="mm"
                            android:gravity="center_horizontal"
                            android:inputType="numberDecimal"
                            android:textColor="@color/startBlue"
                            android:textColorHint="#eaa0a0"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/txtYearProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:digits="0123456789"
                            android:hint="yyyy"
                            android:inputType="numberDecimal"
                            android:textColor="@color/startBlue"
                            android:textColorHint="#eaa0a0"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Add your bio"
            android:textColor="#ffffff"

            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:id="@+id/txtBioProfile"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:textColor="#fff"
            android:text="Save"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_login"
            android:id="@+id/btnSave"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:textColor="#fff"
            android:text="Change password "
            android:textSize="12dp"

            android:background="@drawable/background_login"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_changeP"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:textColor="#fff"
            android:text="Log out"
            android:background="@drawable/background_login"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_logout"/>

    </LinearLayout>
</ScrollView>